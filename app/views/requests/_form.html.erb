
<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this search from running:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- request fields are state, lccn (publication), andtext, ortext, phrasetext, datefiltertype, date1, date2 -->

 
  <div class="field">
    <%= f.label "Contains ALL of keywords" %><br>
    <%= f.text_area :andtext %>
  </div>
  <div class="field">
    <%= f.label "Contains any of the keywords" %><br>
    <%= f.text_area :ortext %>
  </div>
  <div class="field">
  <%= f.label "Contains the phrase" %><br>
  <%= f.text_area :phrasetext %>
</div>
  <div class="field">
    <%= f.label "Date filter type" %><br>
    <%= f.radio_button(:datefiltertype, "yearRange", :checked => true) %>
    <%= f.label :datefiltertype_yearRange, "year range" %>
    <%= f.radio_button(:datefiltertype, "range") %>
    <%= f.label :datefiltertype_range, "exact dates" %>
  </div>
  <div class="field">
  <%= f.label :date1 %><br>
  <%= f.text_area :date1 %>
</div>
  <div class="field">
  <%= f.label :date2 %><br>
  <%= f.text_area :date2 %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>