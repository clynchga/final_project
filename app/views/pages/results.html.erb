<h1>Results go here</h1>

<p><%= link_to "New Search", "/requests/new" %></p>

<!-- sample thumbnail url: http://chroniclingamerica.loc.gov/lccn/sn86069496/1914-11-25/ed-1/seq-1/thumbnail.jpg -->

<p><%= "Displaying results #{@pageindex1} through #{@pageindex2} of #{@total_pages}" %></p> 

<div class="row">
<% @pages.each do |p| %>
	<% pub_name = Publication.find_by(lccn: p.lccn).title %>
	<% months = [nil,"January","February","March","April","May","June","July","August","September","October","November","December"] %>
	<% month = months[p.month] %>
	<% text_url = p.img_url[0,(p.img_url.length - 4)] + "/ocr/" %>
	<div class="col-md-3">
		<%= "#{pub_name}" %>
		<%= "#{month} #{p.day}, #{p.year}" %>
		<%= image_tag "http://chroniclingamerica.loc.gov/lccn/#{p.lccn}/#{p.datefield}/ed-#{p.ed}/seq-#{p.seq}/thumbnail.jpg" %>
		<%= link_to "PDF", p.img_url %>
		<%= link_to "text", text_url %>
	</div>
<% end %>
</div>

<% if @total_pages > 20 %>
	<p><%= link_to "Next page" , "/results/#{@requestid}/page/2" %></p>
<% end %>

