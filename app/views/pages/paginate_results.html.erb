<h3>Search results</h3>
<p><em><%= "Dates: #{@request.month1}/#{@request.day1}/#{@request.year1} - #{@request.month2}/#{@request.day2}/#{@request.year2}" %></em></p>
<% if @request.andtext != "" || @request.ortext != "" || @request.phrasetext != "" %>
	<p><em><%= "Keyword: #{@request.andtext} #{@request.ortext} #{@request.phrasetext}" %></em></p>
<% end %>
<% if @request.state != "" %>
	<p><em><%= "State: #{@request.state}" %></em></p>
<% end %>
<% if @request.lccn != "" %>
	<p><em><%= "Publication: #{Publication.find_by(lccn: @request.lccn).title}" %></em></p>
<% end %>

<p><a href="/requests/new" class="btn btn-primary" role="button">New Search</a></p>

<p><%= "Displaying results #{@pageindex1} through #{@pageindex2} of #{@total_pages}" %></p> 


<div class="row">

	<% @pages.each do |p| %>
		<div class="col-md-4">
			<% pub_name = Publication.find_by(lccn: p.lccn).title %>
			<% months = [nil,"January","February","March","April","May","June","July","August","September","October","November","December"] %>
			<% month = months[p.month] %>
			<% text_url = p.img_url[0,(p.img_url.length - 4)] + "/ocr/" %>
			<% loc_url = p.img_url[0,(p.img_url.length - 4)] + "/" %>
			<% thumbnail_url = "http://chroniclingamerica.loc.gov/lccn/#{p.lccn}/#{p.datefield}/ed-#{p.ed}/seq-#{p.seq}/thumbnail.jpg" %>
			<% highlight_keyword = [] %>
			<% highlight_keyword.append(@request.andtext.split('+')) %>
			<% highlight_keyword.append(@request.ortext.split('+')) %>
			<% highlight_keyword.append(@request.phrasetext.split('+')) %>
			<div class="thumbnail">
				<%= image_tag("http://chroniclingamerica.loc.gov/lccn/#{p.lccn}/#{p.datefield}/ed-#{p.ed}/seq-#{p.seq}/thumbnail.jpg", title:"#{p.id}") %>
					<div class="caption">
						<h6><strong><%= "#{pub_name}" %></strong></h6>
						<h6><%= "#{month} #{p.day}, #{p.year}" %></h6>
						<h6><%= "Page #{p.seq}" %></h6>
						<p><%= puts highlight_keyword %></p>
						<!-- link triggers -->
						<p><%= link_to "PDF", "#{p.img_url}", :target => "blank" %> | <a data-toggle="modal" href="#{text_url}" data-target="#textModal">OCR text</a> | <%= link_to "Read on LOC", "#{loc_url}", :target => "blank" %></p>
						<!-- OCR modal -->
						<div class="modal fade" id="textModal" tab-index="-1" role="dialog" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
									</div>
									<div class="modal-body">
										<p><%= highlight(p.ocr_text, highlight_keyword[0]) %></p>
									</div>
								</div>
							</div>
						</div>
					</div>
			</div>
		</div>
	<% end %>
	
</div>

<% if @thispagenum == 2 %>
	<div class="btn btn-default" role="button"><%= link_to "Previous Page" , "/results/#{@requestid}" %></div>
<% else %>
	<div class="btn btn-default" role="button"><%= link_to "Previous Page" , "/results/#{@requestid}/page/#{@previouspagenum}" %></div>
<% end %>

<% if %>
	<div class="btn btn-default" role="button"><%= link_to "Next Page" , "/results/#{@requestid}/page/#{@nextpagenum}" %></div>
<% end %>